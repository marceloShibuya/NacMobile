<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">


    <ImageView android:layout_width="104dp"
               android:layout_height="132dp"
               android:layout_gravity="center"
               android:src="@drawable/sub"
               android:layout_marginTop="15sp"
               android:id="@+id/btSub"/>

    <ImageView android:layout_width="108dp"
               android:layout_height="102dp"
               android:layout_gravity="center"
               android:src="@drawable/magalu"
               android:layout_marginTop="15sp"
               android:id="@+id/btMagalu"/>

    <ImageView android:layout_width="106dp"
               android:layout_height="166dp"
               android:layout_gravity="center"
               android:src="@drawable/americanas"
               android:layout_marginTop="15sp"
               android:id="@+id/btAmerica"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="SOBRE"
            android:id="@+id/btSob"/>


</LinearLayout>